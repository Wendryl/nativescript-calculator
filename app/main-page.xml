<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="Calculadora" icon="" />

    <StackLayout class="p-20">
      <Label text="Selecione a operação"/>
      <ListPicker items="{{ operacoes }}" selectedIndex="{{ operacaoSelecionada}}"/>
      <TextField hint="Valor 1" class="p-20" keyboardType="number" text="{{ valor1 }}"/>
      <TextField hint="Valor 2" class="p-20" keyboardType="number" text="{{ valor2 }}"/>
      <Button text="Calcular" tap="{{ calcular }}" class="-primary"/>
      <Label text="{{ resultado }}" />
    </StackLayout>
</Page>
